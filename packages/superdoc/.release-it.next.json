{
  "dryRun": true,
  "git": {
    "commitMessage": "chore: release v${version} [skip ci]",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true,
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "tag": "next"
  },
  "preRelease": "next",
  "hooks": {
    "after:bump": ["npm run build"],
    "after:release": "echo Successfully released v${version}"
  }
}
