{
  "dryRun": true,
  "git": {
    "commitMessage": "chore: release v${version} [skip ci]",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true,
    "requireCleanWorkingDir": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "autoGenerate": true,
    "draft": false,
    "tokenRef": "GITHUB_TOKEN"
  }
}
