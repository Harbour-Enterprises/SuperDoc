{
  "include": ["./src/**/*"],
  "compilerOptions": {
    // "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": ["./node_modules/@types/*"],
    "target": "ES2022"
  },
  "exclude": ["node_modules", "dist", "**/*.test.js"]
}
