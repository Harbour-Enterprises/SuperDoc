{
  "extends": "../../tsconfig.base.json",
  "include": ["./src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types/*"]
