{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {},
    "customConditions": ["source"]
  },
  "include": [
    "packages/super-editor/src/**/*",
    "packages/layout-engine/contracts/src/**/*",
    "packages/layout-engine/geometry-utils/src/**/*",
    "packages/layout-engine/pm-adapter/src/**/*",
    "packages/layout-engine/measuring/dom/src/**/*",
    "packages/layout-engine/layout-engine/src/**/*",
    "packages/layout-engine/painters/dom/src/**/*",
    "packages/layout-engine/painters/pdf/src/**/*",
    "packages/layout-engine/layout-bridge/src/**/*",
    "packages/layout-engine/style-engine/src/**/*",
    "packages/layout-engine/tests/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "e2e-tests",
    "packages/collaboration-yjs/examples/**",
    "packages/super-editor/src/core/super-converter/**/*"
  ]
}
